<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/gr_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize ="40sp"
        android:textColor="#07F1DB"/>
    <EditText
        android:id="@+id/edit_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Фамилия"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Номер"
        android:inputType="text"
        />



    <Button
        android:id="@+id/button_add_subscriber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить"/>
    <TextView
        android:id="@+id/info_add_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize ="30sp"
        android:textColor="#28036A"/>

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чтобы получить номер абонента введите фамилию"
        android:textSize ="40sp"
        android:textColor="#07F1DB"/>

    <EditText
        android:id="@+id/edit_get_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Фамилия"
        android:inputType="text"/>

    <Button
        android:id="@+id/button_get_subscriber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить"/>

    <TextView
        android:id="@+id/get_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize ="40sp"
        android:textColor="#28036A"/>
        
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>